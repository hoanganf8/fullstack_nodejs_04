<h1>Danh sách người dùng</h1>
<a href="/users/add" class="btn btn-primary mb-3">Thêm mới</a>
<form class="mb-3" action="">
  <div class="row">
    <div class="col-3">
      <select name="status" class="form-select">
        <option value="all">Tất cả</option>
        <option value="active">Kích hoạt</option>
        <option value="inactive">Chưa kích hoạt</option>
      </select>
    </div>
    <div class="col-7">
      <input
        type="search"
        name="keyword"
        placeholder="Từ khóa..."
        class="form-control"
      />
    </div>
    <div class="col-2 d-grid">
      <button class="btn btn-primary">Tìm kiếm</button>
    </div>
  </div>
</form>
<% if (msg.length) { %>
<div class="alert alert-success mt-2"><%= msg %></div>
<% } %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <th>Email</th>
      <th>Trạng thái</th>
      <th width="5%">Sửa</th>
      <th width="5%">Xóa</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => { %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.status ? 'Kích hoạt': 'Chưa kích hoạt' %></td>
      <td>
        <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Sửa</a>
      </td>
      <td>
        <form
          action="/users/delete/<%= user.id %>"
          method="post"
          onsubmit="return confirm('Bạn có chắc chắn?')"
        >
          <button class="btn btn-danger">Xóa</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
